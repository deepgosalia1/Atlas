<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.anonym.atlas.RulesActivity">

    <ImageView
        android:id="@+id/rules_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hard_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="383dp"
        app:srcCompat="@drawable/rules" />

    <ImageView
        android:id="@+id/hard_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rules_image"
        android:layout_marginStart="30dp"
        android:clickable="true"
        android:onClick="response_hard"
        app:srcCompat="@drawable/hard_final"/>

    <ImageView
        android:id="@+id/easy_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rules_image"
        android:layout_alignTop="@+id/hard_image"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:onClick="response_easy"
        app:srcCompat="@drawable/easy_final"/>

    <TextView
        android:id="@+id/rules_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="176dp"
        android:fontFamily="serif-monospace"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

</RelativeLayout>
