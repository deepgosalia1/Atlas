<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_t"
    android:orientation="vertical">

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="350dp"
        android:onClick="generatePlace"
        android:text="Generate Place"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/comp_place"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="290dp"
        android:layout_marginLeft="110dp"
        android:layout_weight="0.3"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="290dp"
        android:layout_marginLeft="15dp"
        android:text="Computer :"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/user_place"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="110dp"
        android:layout_weight="0.3"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="37dp"
        android:text="User :"
        android:textAlignment="center"
        android:textSize="15dp" />

    <Button
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_weight="0.3"
        android:onClick="redirectToMaps"
        android:text="Show Map" />

    <EditText
        android:id="@+id/enterplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="enter a place here "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="submitplace"
        android:text="Submit" />
</RelativeLayout>